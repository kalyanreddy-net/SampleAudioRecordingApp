<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AudioRecordingSampleApp.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24,60,24,24" CornerRadius="0">
            <Label Text="Welcome to Audio Recording App!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>

        <!--<Button x:Name="recordButton" Text="Record Audio" Clicked="OnRecordAudioButtonClicked"/>-->

         <ListView ItemsSource="{Binding Recordings}" HasUnevenRows="True" ItemTapped="ListView_ItemTapped">
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <StackLayout Padding="10">
                        <Label Text="{Binding FilePath}" />
                    </StackLayout>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>


    </StackLayout>

</ContentPage>

